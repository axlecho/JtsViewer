<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/error_tip_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true">


    <ImageView
        android:id="@+id/error_tip_imageview"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@drawable/ic_error_network"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="3" />

    <TextView
        android:id="@+id/error_tip_textview"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="~error"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="@id/error_tip_imageview"
        app:layout_constraintRight_toRightOf="@id/error_tip_imageview"
        app:layout_constraintTop_toBottomOf="@id/error_tip_imageview" />
</android.support.constraint.ConstraintLayout>
